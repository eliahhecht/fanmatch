@model FanMatch.Models.Person

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Person</legend>

    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-field">
        @Html.Partial("_PersonType", Model)
    </div>

    <div class="display-label">Fandoms</div>
    <div class="display-field">
        <ul>
            @foreach (var fandom in Model.Fandoms.OrderBy(f => f.Name))
            {
                <li>@fandom.Name</li>
            }
        </ul>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List",  "Index")
</p>
