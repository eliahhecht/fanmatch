@model FanMatch.Models.Person

@{
    var attributes = new List<string>();
    if (Model.IsReader) {
        attributes.Add("Reader");
    }
    if (Model.IsWriter) {
        attributes.Add("Writer");
    }
    if (Model.CanMatchMultiple) {
        attributes.Add("Multiple");
    }
    
    }

@(String.Join(", ", attributes))